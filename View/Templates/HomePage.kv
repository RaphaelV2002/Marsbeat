ScreenManager:
    MDScreen:
        MDBoxLayout:
            orientation: "horizontal"
            MDBoxLayout:
                id: nav_bar
                orientation: "vertical"
                adaptive_width: True
                pos_hint: {"top": 1}

                MDNavigationRail:
                    id: navigation_rail
                    type: "selected"
                    on_item_press: app.action_content(*args)

                    MDNavigationRailItem:
                        text: "Online"
                        icon: "web"

                    MDNavigationRailItem:
                        text: "Playlists"
                        icon: "playlist-music"

                    MDNavigationRailItem:
                        text: "Favorite"
                        icon: "heart-outline"

                    MDNavigationRailItem:
                        text: "Local"
                        icon: "folder"

                    MDNavigationRailItem:
                        text: "Setting"
                        icon: "cog-outline"
            MDBoxLayout:
                id: content
                orientation: "vertical"
                padding: 15
                spacing: 15

        MDBoxLayout:
            id: playing
            adaptive_height: True
            orientation: "horizontal"
            md_bg_color: 0, 0, 0, 1
            MDIconButton:
                icon: "skip-previous-outline"
                theme_icon_color: "Custom"
            MDIconButton:
                id: play_pause
                icon: "play"
                theme_icon_color: "Custom"
                on_release: app.play_pause(*args)
            MDIconButton:
                icon: "skip-next-outline"
                theme_icon_color: "Custom"
            FitImage:
                source: app.img_source
                size_hint: .2, 1
                radius: 36, 36, 36, 36
            Slider:
                id: slider
                min: 0
                max: 1
                step: 1
                value: 0
                on_value: app.pos_sound
            MDLabel:
                id: track_title
                text: " "
                halign: "center"
                theme_text_color: "Primary"
            MDLabel:
                id: length_track
                text: "00:00"
                halign: "right"
                size_hint_x: .25
                theme_text_color: "Primary"
            MDIconButton:
                icon: "plus"
                pos_hint: {"center_y": .5}
            MDIconButton:
                icon: "heart-plus-outline"
                pos_hint: {"center_y": .5}
            MDIconButton:
                icon: "download-outline"
                pos_hint: {"center_y": .5}